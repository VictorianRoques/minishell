<input>        ::= <commannd line> '\n'
                | <command line> EOF
                | '\n'
                | EOF
<command line> ::=      <task>
                |       <task> '&'
                |       <task> '&' <command line>
                |       <task> ';'
                |       <task> ';' <command line>

<task>           ::=     <command>
                |       <task> '|' <task>
<command>       ::=     <simple command>
                |       <simple command> '<' <filename>
                |       <simple command> '>' 

<simple command> ::= <pathname> <token list>

<options> ::= '-' <token>
            | <options>

<token list>	::=		<token> <token list>
						|	(EMPTY)



// NOTES
<simple command> ::= <token list> (pathname is the first) 